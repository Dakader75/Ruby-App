<% if flash[:alert] %>
   <%= js add_gritter(flash[:alert], title: "Derek Thompson Portfolio", sticky: false) %>
<% elsif flash[:error] %>
   <%= js add_gritter(flash[:error], title: "Derek Thompson Portfolio", sticky: false) %>
<% else %>
   <%= js add_gritter(flash[:notice], title: "Derek Thompson Portfolio", sticky: false) %>
<% end %>